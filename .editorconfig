# https://editorconfig.org

root = true

end_of_line = lf
insert_final_newline = true

[*.ts]
charset = utf-8
indent_style = space
indent_size = 2
spaces_around_brackets = inside
trim_trailing_whitespace = true
quote_type = single

[*.md]
insert_final_newline = false
trim_trailing_whitespace = true

[*.json]
charset = utf-8
indent_style = space
indent_size = 2